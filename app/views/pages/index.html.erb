<p id="notice"><%= notice %></p>

<h1>Listing Pages</h1>

<table class="pagelist">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Style</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.title %></td>
        <td><%= page.body %></td>
        <td><%= page.style %></td>
        <td><%= link_to 'Show', page %>
            <%= link_to 'Edit', edit_page_path(page) %>
            <%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

